{
  "manifest_version": 3,
  "name": "HaxBall Desktop",
  "version": "1.2.3",
  "description": "Extensao oficial do HaxBall Desktop",

  "permissions": [],

  "host_permissions": ["*://www.haxball.com/*", "*://haxball.com/*", "*://html5.haxball.com/*", "*://localhost/*"],

  "content_scripts": [
    {
      "matches": ["*://www.haxball.com/*", "*://haxball.com/*", "*://html5.haxball.com/*"],
      "js": [
        "core.js",
        "header.js",
        "background.js",
        "welcome.js",
        "styles.js",
        "themes.js",
        "settings.js",
        "stretched.js",
        "roomlist.js",
        "chatlinks.js",
        "commands.js",
        "hideui.js",
        "quickavatar.js",
        "leaveroom.js",
        "translate.js",
        "ads.js",
        "security.js",
        "autoupdate.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ]
}
